<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <!-- Tabla FormatoFua -->
    <changeSet id="formatofua-2025-04-15-01" author="pedro">
        <preConditions onFail="MARK_RAN">
            <not><tableExists tableName="formatofua"/></not>
        </preConditions>
        <createTable tableName="formatofua">
            <column name="formatofua_id" type="int" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="uuid" type="char(38)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="campos" type="varchar(1024)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <!-- Tabla Fua -->
    <changeSet id="fua-2025-04-15-01" author="pedro">
        <preConditions onFail="MARK_RAN">
            <not><tableExists tableName="fua"/></not>
        </preConditions>
        <createTable tableName="fua">
            <column name="fua_id" type="int" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="uuid" type="char(38)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="visit_uuid" type="char(38)">
                <constraints nullable="false"/>
            </column>
            <column name="formatofua_uuid" type="char(38)">
                <constraints nullable="false"/>
            </column>
            <column name="name" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="payload" type="clob"/>
        </createTable>

        <addForeignKeyConstraint baseTableName="fua"
                                 baseColumnNames="visit_uuid"
                                 referencedTableName="visit"
                                 referencedColumnNames="uuid"
                                 constraintName="fk_fua_visit"/>

        <addForeignKeyConstraint baseTableName="fua"
                                 baseColumnNames="formatofua_uuid"
                                 referencedTableName="formatofua"
                                 referencedColumnNames="uuid"
                                 constraintName="fk_fua_formatofua"/>
    </changeSet>

    <!-- Tabla Fuapdf -->
    <changeSet id="fuapdf-2025-04-15-01" author="pedro">
        <preConditions onFail="MARK_RAN">
            <not><tableExists tableName="fuapdf"/></not>
        </preConditions>
        <createTable tableName="fuapdf">
            <column name="fuapdf_id" type="int" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="uuid" type="char(38)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="fua_uuid" type="char(38)">
                <constraints nullable="false"/>
            </column>
            <column name="archivo" type="clob"/>
        </createTable>

        <addForeignKeyConstraint baseTableName="fuapdf"
                                 baseColumnNames="fua_uuid"
                                 referencedTableName="fua"
                                 referencedColumnNames="uuid"
                                 constraintName="fk_fuapdf_fua"/>
    </changeSet>

    <!-- Tabla Fuaxml -->
    <changeSet id="fuaxml-2025-04-15-01" author="pedro">
        <preConditions onFail="MARK_RAN">
            <not><tableExists tableName="fuaxml"/></not>
        </preConditions>
        <createTable tableName="fuaxml">
            <column name="fuaxml_id" type="int" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="uuid" type="char(38)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="fua_uuid" type="char(38)">
                <constraints nullable="false"/>
            </column>
            <column name="archivo" type="clob"/>
        </createTable>

        <addForeignKeyConstraint baseTableName="fuaxml"
                                 baseColumnNames="fua_uuid"
                                 referencedTableName="fua"
                                 referencedColumnNames="uuid"
                                 constraintName="fk_fuaxml_fua"/>
    </changeSet>

</databaseChangeLog>
